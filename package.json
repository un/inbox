{
  "name": "@u22n/inbox-monorepo",
  "private": "true",
  "version": "0.0.1",
  "description": "email + chat communications platform",
  "scripts": {
    "format": "prettier . --write",
    "check:format": "prettier . --check",
    "precheck": "dotenv -e .env.local -- pnpm -r precheck",
    "check": "pnpm check:format && pnpm precheck && turbo run check",
    "build:all": "dotenv -e .env.local -- turbo run build",
    "build:web-app": "turbo run build",
    "build:mail-bridge": "turbo run build",
    "build:api": "turbo run build",
    "build:realtime": "turbo run build",
    "clean": "find . -name node_modules -o -name .nuxt -o -name .nitro -o -name .output -o -name .turbo -o -name dist -type d -prune | xargs rm -rf",
    "dev": "dotenv -e .env.local -- turbo run dev",
    "docker:up": "docker compose --project-directory packages/local-docker up",
    "docker:down": "docker compose --project-directory packages/local-docker down",
    "docker:clean": "docker compose --project-directory packages/local-docker down -v",
    "db:push": "dotenv -e .env.local -- pnpm --dir packages/database db:push",
    "db:studio": "dotenv -e .env.local -- turbo run db:studio",
    "db:generate": "dotenv -e .env.local -- turbo run db:generate",
    "db:up": "dotenv -e .env.local -- turbo run db:up",
    "db:check": "dotenv -e .env.local -- turbo run db:generate",
    "db:drop": "dotenv -e .env.local -- turbo run db:drop",
    "dev:r": "infisical run --env=local -- turbo run dev",
    "db:push:r": "pnpm --dir packages/database db:push:r",
    "db:studio:r": "infisical run --env=local -- turbo run db:studio",
    "db:generate:r": "infisical run --env=local -- turbo run db:generate",
    "db:up:r": "infisical run --env=local -- turbo run db:up",
    "db:check:r": "infisical run --env=local -- turbo run db:generate",
    "db:drop:r": "infisical run --env=local -- turbo run db:drop",
    "ee:dev:r": "infisical run --env=local -- turbo run ee:dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Omar McAdam - @McPizza0",
  "license": "AGPLv3",
  "devDependencies": {
    "@nuxt/eslint-config": "^0.2.0",
    "@types/node": "^20.11.29",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "turbo": "^1.12.5",
    "typescript": "^5.4.2"
  },
  "packageManager": "pnpm@8.5.1"
}
