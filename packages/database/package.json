{
  "name": "@u22n/database",
  "private": true,
  "types": "./index.ts",
  "main": "index.ts",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:mysql --config=drizzle.config.ts",
    "db:push": "drizzle-kit push:mysql --config=drizzle.config.ts && infisical run --env=local -- tsx postPush.ts",
    "db:push:r": "infisical run --env=local -- drizzle-kit push:mysql --config=drizzle.config.ts && infisical run --env=local -- tsx postPush.ts",
    "db:check": "drizzle-kit check:mysql --config=drizzle.config.ts",
    "db:up": "drizzle-kit up:mysql --config=drizzle.config.ts",
    "db:drop": "drizzle-kit drop --config=drizzle.config.ts",
    "db:drop:r": "infisical run --env=local -- drizzle-kit drop --config=drizzle.config.ts",
    "db:studio": "pnpm drizzle-kit studio --port 3333  --config=drizzle.config.ts",
    "db:studio:r": "infisical run --env=local -- drizzle-kit studio --port 3333  --config=drizzle.config.ts",
    "db:seed:r": "infisical run --env=local -- tsx dbSeed.ts",
    "db:clean:r": "infisical run --env=local -- tsx dbClean.ts"
  },
  "dependencies": {
    "@planetscale/database": "^1.16.0",
    "@u22n/tsconfig": "^0.0.2",
    "@u22n/types": "workspace:*",
    "@u22n/utils": "workspace:*",
    "drizzle-orm": "^0.30.3",
    "mysql2": "^3.9.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "drizzle-kit": "^0.20.14",
    "tsx": "^4.7.1"
  }
}